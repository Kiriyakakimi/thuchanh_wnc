<%- include('header') %>
<table class="table">
    <tbody class="table-groovy-divider">
        <tr>
            <th scope="col">STT</th>
            <th scope="row">Username</th>
            <th scope="row">Fullname</th>
            <th scope="row">Address</th>
            <th scope="row">Settings</th>
        </tr>
        <% for(let i=0; i < data.rows.length; i++) { %>
            <tr>
                <th scope="row">
                    <%= i+1 %>
                </th>
                <td>
                    <%= data.rows[i].username %>
                </td>
                <td>
                    <%= data.rows[i].fullname %>
                </td>
                <td>
                    <%= data.rows[i].address %>
                </td>
                <td>
                    <a href="/user/<%= data.rows[i].username %>"><span class="setting"><i class="fa fa-eye"
                                aria-hidden="true"></i></span></a>
                    <a href="/user/edit/<%= data.rows[i].username %>"><span class="setting"><i class="fa fa-edit"
                                aria-hidden="true"></i></span></a>
                    <form action="/user/delete/" method="post" class="del">
                        <input type="hidden" value="<%= data.rows[i].username %>" name="username">
                        <label for="<%= data.rows[i].username %>"><span class="setting"><i class="fa fa-trash"
                                    aria-hidden="true"></i></span></label>
                        <input type="submit" id="<%= data.rows[i].username %>" style="display: none;" value="XÃ³a" />
                    </form>
                </td>
            </tr>
            <% } %>
    </tbody>
</table>
<%- include('footer') %>
